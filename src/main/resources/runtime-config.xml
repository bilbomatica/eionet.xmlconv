<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="appConfigDefinitionProvider" class="eionet.gdem.configuration2.ConfigurationDefinitionProviderImpl">
        <constructor-arg index="0">
            <array>
                <value>acl.properties</value>
                <value>gdem.properties</value>
                <value>eionetdir.properties</value>
                <value>CatalogManager.properties</value>
                <value>fme.properties</value>
                <value>ApplicationResources.properties</value>
            </array>
        </constructor-arg>
    </bean>
    
    <bean id="configurationPropertyResolver" class="eionet.gdem.configuration2.ConfigurationPropertyResolverImpl">
        <constructor-arg ref="appConfigDefinitionProvider" />
    </bean>
    
    <bean id="configurationPostProcessor" class="eionet.gdem.configuration2.spring.EionetPlaceholderConfigurer">
        <constructor-arg ref="configurationPropertyResolver" />
    </bean>
    
</beans>
