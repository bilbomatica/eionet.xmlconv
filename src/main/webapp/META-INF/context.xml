<?xml version='1.0' encoding='utf-8'?>
<Context>
    <Resource name="jdbc/GDEM_DB"
        auth="Container"
        type="javax.sql.DataSource"
        maxActive="100"
        maxIdle="30"
        maxWait="10000"
        username="${db.user}"
        password="${db.password}"
        driverClassName="${db.driver}"
        url="${db.host}">
    </Resource>
</Context>
